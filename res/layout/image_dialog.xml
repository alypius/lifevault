<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ImageView>

    <Button
        android:id="@+id/image_dialog_close"
        android:layout_width="@dimen/dismiss_button_width"
        android:layout_height="@dimen/dismiss_button_height"
        android:layout_gravity="center"
        android:onClick="dialogClickHandler"
        android:text="@string/dismiss_text" >
    </Button>

</LinearLayout>