<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <VideoView
        android:id="@+id/video_dialog_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </VideoView>

    <Button
        android:id="@+id/video_dialog_close"
        android:layout_width="@dimen/dismiss_button_width"
        android:layout_height="@dimen/dismiss_button_height"
        android:layout_gravity="center"
        android:onClick="dialogClickHandler"
        android:text="@string/dismiss_text" >
    </Button>

</LinearLayout>